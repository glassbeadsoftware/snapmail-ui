{
  "name": "snapmail",
  "version": "0.1.5",
  "description": "A minimalist web interface for Snapmail Holochain app",
  "scripts": {
    "all"               : "npm run sandbox-create && concurrently \"npm:sandbox-run\" \"npm:billy-ui\" \"npm:alex-ui\" \"npm:camille-ui\"",
    "all-ui"            : "concurrently --kill-others \"npm:billy-ui\" \"npm:alex-ui\" \"npm:camille-ui\"",
    "alex-ui"           : "concurrently -k --names tsc,dev-server \"web-dev-server --config web-dev-server.config.mjs\"",
    "billy-ui"          : "concurrently -k --names tsc,dev-server \"web-dev-server --config web-dev-server-billy.config.mjs\"",
    "camille-ui"        : "concurrently -k --names tsc,dev-server \"web-dev-server --config web-dev-server-camille.config.mjs\"",
    "alex"              : "npm run sandbox-create && concurrently --kill-others \"npm:sandbox-run\" \"npm:alex-ui\"",
    "alex-hc"           : "WASM_LOG=debug RUST_LOG=warn hc s run -p=8880",
    "camille-perm"      : "concurrently --kill-others \"npm:camille-ui\" \"npm:camille-hc-perm\"",
    "camille-hc-perm"   : "RUST_LOG=warn holochain-run-dna -p 8882 -r ./tmp/camille ../snapmail-rsm/snapmail.dna",
    "sandbox-create-all": "rm -rf ~/tmp && mkdir ~/tmp && hc s clean && hc s create --root ~/tmp/ -n 3 network -b https://bootstrap-staging.holo.host/ quic && hc s call 0 1 2 install-app-bundle ../snapmail.happ",
    "sandbox-run"       : "WASM_LOG=debug RUST_LOG=warn hc s run --all -p 8880 8881 8882",
    "sandbox-run-win"   : "hc s run --all -p 8880 8881 8882",
    "sandbox-setup-win" : "npm-run-all -s -c sandbox-clear-win sandbox-tmp sandbox-clean sandbox-create sandbox-run-win",
    "sandbox-install"   : "hc s call 0 1 2 install-app-bundle ../snapmail.happ",
    "sandbox-create"    : "hc s create --root tmp -n 3 network -b https://bootstrap-staging.holo.host/ quic",
    "sandbox-clean"     : "hc s clean",
    "sandbox-tmp"       : "mkdir tmp",
    "sandbox-clear"     : "rm -rf ./tmp",
    "sandbox-clear-win" : "rmdir /s /q tmp",
    "build-watch"       : "rollup -c rollup.config.js -w",
    "build-rollup"      : "rimraf dist && rollup -c rollup.config.js",
    "test"              : "echo \"Error: no test specified\" && exit 1",
    "esbuild"           : "esbuild --sourcemap --bundle src/index.js --outdir=dist",
    "esprod"            : "esbuild --minify --bundle src/index.js --outdir=dist",
    "start-old"         : "webpack-dev-server --open --config webpack.dev.js",
    "devserver"         : "webpack-dev-server --env.mode development",
    "build"             : "webpack --env.mode production",
    "dev"               : "webpack --config webpack.dev.js",
    "release"           : "webpack --config webpack.release.js",
    "prod"              : "webpack --config webpack.prod.js"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ddd-mtl/snapmail/issues"
  },
  "homepage": "https://github.com/ddd-mtl/snapmail#readme",
  "devDependencies": {
    "@webcomponents/webcomponentsjs": "^2.4.3",
    "copy-webpack-plugin": "^9.0.1",
    "html-webpack-plugin": "^5.3.2",
    "npm-run-all": "^4.1.5",
    "style-loader": "^3.0.0",
    "webpack": "^5.41.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
    "@holochain/conductor-api": "0.1.1",
    "@polymer/polymer": "^3.3.1",
    "@rollup/plugin-commonjs": "^15.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@vaadin-component-factory/vcf-tooltip": "^1.2.2",
    "@vaadin/vaadin": "^15.0.5",
    "@vaadin/vaadin-dialog": "^2.5.2",
    "@vaadin/vaadin-icons": "^4.3.1",
    "@vaadin/vaadin-text-field": "^2.5.5",
    "@web/dev-server": "0.0.13",
    "buffer": "^6.0.3",
    "byte-base64": "^1.1.0",
    "concurrently": "^5.1.0",
    "electron": "^13.1.4",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.27",
    "path-browserify": "^1.0.1",
    "prop-types": "^15.7.2",
    "rollup": "^2.32.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "sjcl": "^1.0.8"
  },
  "main": "webpack.common.js"
}
